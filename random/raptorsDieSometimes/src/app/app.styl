@require "partials/_loader.styl"
@require "partials/_colors.styl"

// Optimize kerning of all text rendered
body, input, textarea, select, button
  text-rendering optimizeLegibility
  -webkit-font-smoothing: antialiased !important;

svg
  display inline-block
  vertical-align middle

// Make sure placeholder text is held over specific rules
::placeholder
  color colorBright !important

a
  text-decoration none

#canvasbg
  position absolute
  left 0;top 0;
  width 100%;height 100%
  background black
  overflow hidden
  #water
    position absolute
    left 0;bottom 0;
    width 100%;height 100%
    background #369
    opacity 50%
    .layer1
      position absolute
      left 0;top -3px
      width 100%;height 3px
      background #69a
      opacity 80%
    .layer2
      position absolute
      left 0px;top 0px
      width 100%;height 5px
      background #579
      opacity 80%
  #sun
    position absolute
    left -100px;top 200px
    width 100px;height 30px
    background yellow
    .layer1
      position absolute
      left 10px;top -10px
      width 80px;height 50px
      background yellow
    .layer2
      position absolute
      left 30px;top -20px
      width 40px;height 70px
      background yellow
  #moon
    position absolute
    left 400px;top 200px
    .layer1
      position absolute
      left 0px;top 0px;
      width 100px;height 30px
      background #999
    .layer2
      position absolute
      left 10px;top -10px
      width 80px;height 50px;
      background #999
    .layer3
      position absolute
      left 30px;top -20px
      width 40px;height 70px
      background #999
    #moonbg1
      position absolute
      left 25px;top 0px
      width 100px;height 30px
    #moonbg2
      position absolute
      left 35px;top -10px
      width 80px;height 50px
    #moonbg3
      position absolute
      left 55px;top -20px
      width 40px;height 70px
  #clouds
    position absolute
    left 0px;top 0px
    width 10%;height 100%
#canvas
  position absolute
  left 0px;top 0px
  width 100%;height 100%
  color white
  overflow hidden
#film
  position absolute
  left 0px;top 0px
  width 100%;height 100%
  background #f00
  opacity 0%
#scoreDestroyed
  position absolute
  left 0px;bottom 0px
  color white
  text-align left
  padding-left 15px
  padding-bottom 15px
#scoreSurvived
  position absolute
  right 0px;bottom 0px
  color white
  text-align right
  padding-right 15px
  padding-bottom 15px
