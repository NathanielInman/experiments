// Base Colors
base-color  = #E6E9ED
light-color = base-color + #666
dark-color  = base-color - #666
error-color = #C33
light-blue = #C4CDD9
dark-blue = #34383F
white = #fff

// Optimize kerning of all text rendered
body, input, textarea, select, button
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased !important

.loader
  &,&:before,&:after
    background #000
    animation load1 1s infinite ease-in-out
    width 1em
    height 4em
  &:before,&:after
    position absolute
    top 0
    content ''
  &:before
    left -1.5em
    animation-delay -0.32s
  text-indent -9999em
  margin 88px auto
  position relative
  font-size 11px
  transform translateZ(0)
  animation-delay -0.16s
  &:after
    left 1.5em
    animation-delay 0.16s

@keyframes load1
  0%,
  80%,
  100%
    box-shadow: 0 0 #000
    height 4em
  40%
    box-shadow 0 -2em #000
    height 5em
