.underTable
  position absolute
  bottom 20px
  left 5%
  width 90%
  max-height 100px
  padding 5px
  border 1px solid #000
  background #fff
  box-shadow 10px 10px 5px #888888
.underTable table
  width 100%
.underTable table td
  width 50%
.underTable table td:last-child
  text-align right

  /* CUSTOM CHECKBOX */
input[type=checkbox]
  visibility hidden
.customCheckbox
  width 80px
  height 22px
  background #CCC
  margin 20px auto
  border-radius 50px
  position relative
  box-shadow inset 0 1px 1px rgba(0,0,0,0.5),0 1px 0 rgba(255,255,255,0.2)

.customCheckbox:before
  content 'YES'
  color #060
  position absolute
  left 10px
  top 1px
  z-index 0
  font-weight bold
  text-shadow 1px 1px 0 rgba(255,255,255,.15)
.customCheckbox:after
  content 'NO'
  color #600
  position absolute
  right 10px
  top 1px
  z-index 0
  font-weight bold

.customCheckbox label
  display block
  width 34px
  height 16px
  border-radius 50px
  transition all .4s ease
  cursor pointer
  position absolute
  top 4px
  left 3px
  z-index 1
  background #fcfff4
  background: -webkit-linear-gradient(top,#fff 0%, #ddd 40%, #bbb 100%)
  box-shadow inset -1px -1px 0px rgba(0,0,0,0.3),0 1px 0 rgba(255,255,255,0.2)

.customCheckbox input[type=checkbox]:checked + label
  left 43px
