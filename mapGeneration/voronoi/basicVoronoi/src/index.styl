@import "nib"
@import "partials/_colors"

// Base styles
html,button,input,select,textarea
  color dark-color

html
  font-size 1em
  line-height 1.4

body
  background  base-color
  font-family 'Courier New', sans-serif
  font-weight 800
  color light-color

// Fixes
::-moz-selection
  background dark-color
  text-shadow none

::selection
  background dark-color
  text-shadow none

// consolidation functions
.absolute
  position absolute
.border
  border 2px solid dark-color + #111
.border-thin
  border 1px solid dark-color + #111
.anchor-fill-top
  left 0; top 0; right 0
  @extend .absolute
.anchor-fill-bottom
  left 0; bottom 0; right 0
  @extend .absolute
.anchor-fill-right
  right 0; top 0; bottom 0
  @extend .absolute
.anchor-fill-left
  left 0; top 0; bottom 0
  @extend .absolute

// No script container
#noscript
  height     50%
  min-width  400px
  color      error-color
  padding    0.5em
  text-align center
  @extend .anchor-fill-top
  &>p
    @extend .absolute, .anchor-fill-bottom, .border-thin
    margin 0.2em 0
    background dark-color
  .btn
    @extend .absolute
    bottom -40px
    left 30%; right 30%
    height 30px
    border 2px solid base-color
    color light-color
    text-align center
    clear both
    background dark-color
    line-height 2
    min-width 200px
    &:hover
      background dark-color+#111
